<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SystemTools.App.App"
             xmlns:local="clr-namespace:SystemTools.App"
             RequestedThemeVariant="Default">
	<Application.DataContext>
		<local:App />
	</Application.DataContext>
	<Design.DataContext>
		<local:App />
	</Design.DataContext>
	<Application.Styles>
        <FluentTheme />
    </Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/tray-icon.ico"
					  ToolTipText="Screen Tools">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Gallery" Click="NativeMenuItem_OnClickOpenGallery" />
						<NativeMenuItemSeparator />
						<NativeMenuItem Header="Exit" Click="NativeMenuItem_OnClickExitApplication" />
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>