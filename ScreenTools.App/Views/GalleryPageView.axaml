<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ScreenTools.App.GalleryPageView"
             xmlns:local="clr-namespace:ScreenTools.App"
             x:DataType="local:GalleryPageViewModel">
    <Design.DataContext>
        <local:GalleryPageViewModel />
    </Design.DataContext>
    <Grid Margin="30">
        <ProgressBar  Margin="0 10" Height="20" 
                      Minimum="0" Maximum="100" Value="{Binding LoadingProgress}"
                      IsVisible="{Binding IsLoading}" />
        <TextBlock Text="No images." IsVisible="{Binding !HasData}" HorizontalAlignment="Center" />
        <ScrollViewer VerticalScrollBarVisibility="Auto" IsVisible="{Binding !IsLoading}">
            <ItemsControl x:Name="ImageItems" ItemsSource="{Binding GalleryImages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.DataTemplates>
                    <DataTemplate DataType="local:GalleryImageViewModel">
                        <Border>
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Name="Preview" Header="Preview" Command="{Binding $parent[UserControl].((local:GalleryPageViewModel)DataContext).PreviewImageCommand}" CommandParameter="{Binding .}" />
                                    <MenuItem Name="ShowInExplorer" Header="Show in explorer" Command="{Binding $parent[UserControl].((local:GalleryPageViewModel)DataContext).ShowImageInExplorerCommand}" CommandParameter="{Binding .}" />
                                    <MenuItem Name="CopyToClipboard" Header="Copy to clipboard" Command="{Binding $parent[UserControl].((local:GalleryPageViewModel)DataContext).CopyImageToClipboardCommand}" CommandParameter="{Binding .}" />
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Image
                                Width="360"
                                Margin="2"
                                Stretch="Uniform"
                                Source="{Binding Bitmap}"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.DataTemplates>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
