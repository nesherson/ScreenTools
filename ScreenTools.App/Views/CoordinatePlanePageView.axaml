<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScreenTools.App.CoordinatePlanePageView"
        x:DataType="local:CoordinatePlanePageViewModel"
        xmlns:local="clr-namespace:ScreenTools.App"
        xmlns:core="clr-namespace:ScreenTools.Core;assembly=ScreenTools.Core">
        <Design.DataContext>
            <local:CoordinatePlanePageViewModel />
        </Design.DataContext>
    <UserControl.Resources>
        <local:WorldToScreenXConverter x:Key="WorldToScreenXConverter" />
        <local:WorldToScreenYConverter x:Key="WorldToScreenYConverter" />
        <local:WorldToScreenPointConverter x:Key="WorldToScreenPointConverter" />
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,*">
        <StackPanel Grid.Row="0">
            <Button Command="{Binding ClearEllipsesCommand}" Width="50">Clear</Button>
        </StackPanel>
        <ItemsControl
            Grid.Row="1"
            ItemsSource="{Binding Shapes}" >
           <ItemsControl.Styles>
               <Style Selector="ItemsControl > ContentPresenter" x:DataType="core:EllipseViewModel">
                   <Setter Property="Canvas.Left" >
                       <MultiBinding Converter="{StaticResource WorldToScreenXConverter}">
                           <Binding Path="WorldPositionX" />
                           <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Scale" />
                           <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Offset" />
                       </MultiBinding>
                   </Setter>
                   <Setter Property="Canvas.Top" >
                       <MultiBinding Converter="{StaticResource WorldToScreenYConverter}">
                           <Binding Path="WorldPositionY" />
                           <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Scale" />
                           <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Offset" />
                       </MultiBinding>
                   </Setter>
               </Style>
           </ItemsControl.Styles>
           <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas x:Name="DrawingOverlayCanvas"
                            Loaded="Canvas_OnInitialized"
                            Background="WhiteSmoke">
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <local:ShapeTemplateSelector>
                    <DataTemplate x:Key="EllipseViewModel" DataType="{x:Type core:EllipseViewModel}">
                        <Ellipse
                            Name="Ellipse"
                            Fill="{Binding Fill}"
                            Height="{Binding ScreenHeight}"
                            Width="{Binding ScreenWidth}" >
                        </Ellipse>
                    </DataTemplate>
                    <DataTemplate x:Key="LineViewModel" DataType="{x:Type core:LineViewModel}">
                        <Line
                            Stroke="{Binding Stroke}"
                            StrokeThickness="{Binding StrokeThickness}">
        
                            <Line.StartPoint>
                                <MultiBinding Converter="{StaticResource WorldToScreenPointConverter}">
                                    <Binding Path="WorldStartPoint" />
                                    <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Scale" />
                                    <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Offset" />
                                </MultiBinding>
                            </Line.StartPoint>

                            <Line.EndPoint>
                                <MultiBinding Converter="{StaticResource WorldToScreenPointConverter}">
                                    <Binding Path="WorldEndPoint" />
                                    <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Scale" />
                                    <Binding Path="$parent[ItemsControl].((local:CoordinatePlanePageViewModel)DataContext).Offset" />
                                </MultiBinding>
                            </Line.EndPoint>
                        </Line>
                    </DataTemplate>
                    <DataTemplate x:Key="TextBlockViewModel" DataType="{x:Type core:TextBlockViewModel}">
                        <TextBlock
                            Text="{Binding Text}"
                            FontSize="{Binding FontSize}"
                            Foreground="{Binding Foreground}"
                            Background="{Binding Background}">
                        </TextBlock>
                    </DataTemplate>
                </local:ShapeTemplateSelector>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
      
</UserControl>
