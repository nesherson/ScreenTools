<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
             x:Class="ScreenTools.App.ConfirmDialogView"
             xmlns:local="clr-namespace:ScreenTools.App"
             x:DataType="local:ConfirmDialogViewModel"
             Foreground="{DynamicResource PrimaryForeground}"
             MinWidth="300">
    <Design.DataContext>
        <local:ConfirmDialogViewModel />
    </Design.DataContext>
    <Border Background="{DynamicResource PrimaryBackground}">
        <StackPanel>
            <Border Background="{DynamicResource PrimaryBackgroundGradient}">
                <TextBlock Text="{Binding Title}"
                           Padding="10"
                           FontSize="18" />
            </Border>
            <Border Padding="20">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal">
                        <Label FontFamily="{DynamicResource PhosphorFill}" Content="{Binding IconText}" />
                        <TextBlock TextWrapping="Wrap" Text="{Binding Message}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                        <Button
                            Content="{Binding CancelText}" 
                            Command="{Binding CancelCommand}"
                            Classes="danger outline"
                            MinWidth="70"
                            HorizontalContentAlignment="Center"/>
                        <Button
                            Content="{Binding ConfirmText}" 
                            Command="{Binding ConfirmCommand}"
                            Classes="accent"
                            MinWidth="70"
                            HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
